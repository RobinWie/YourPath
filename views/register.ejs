<%- include("partials/header") %>

<div class="row">
    <h1 style="text-align: center">Sign Up</h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/register" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="username" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password" required>
            </div>
            <div class="form-group">
                <p>Please answer the questions below. You will be assigned to a group of users based on your answers!</p>
            </div>

            <div class="form-group">
                <label for="question_1">Do you prefer detailed or fast information? (5 = very detailed)</label>
                <p></p>
                <select name="question_1" id="question_1">
                    <option value="5">5</option>
                    <option value="4">4</option>
                    <option value="3">3</option>
                    <option value="2">2</option>
                    <option value="2">1</option>
                </select>
            </div>

            <div class="form-group">
                <label for="question_2">Do you want big changes in life? (5 = very big)</label>
                <p></p>
                <select name="question_2" id="question_2">
                    <option value="5">5</option>
                    <option value="4">4</option>
                    <option value="3">3</option>
                    <option value="2">2</option>
                    <option value="2">1</option>
                </select>
            </div>

            <div class="form-group">
                <label for="question_3">Are social contacts important for you? (5 = very important)</label>
                <p></p>
                <select name="question_3" id="question_3">
                    <option value="5">5</option>
                    <option value="4">4</option>
                    <option value="3">3</option>
                    <option value="2">2</option>
                    <option value="2">1</option>
                </select>
            </div>

            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="register">
            </div>
        </form>
    </div>
    <p>Note: If you're not redirected to the search bar, your username is already taken!</h1>
</div>

<%- include("partials/footer") %>